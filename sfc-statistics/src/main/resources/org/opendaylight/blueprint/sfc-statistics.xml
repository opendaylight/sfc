<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0"
           odl:use-default-for-reference-types="true">

    <reference id="dataBroker"
               interface="org.opendaylight.controller.md.sal.binding.api.DataBroker"
               odl:type="default"/>

    <bean id="sfcStatisticsManager"
          class="org.opendaylight.sfc.statistics.SfcStatisticsManagerImpl"
          destroy-method="close">
    </bean>

    <!-- This allows the statsManager to be used from the RspProcessor on RSP creation -->
    <service ref="sfcStatisticsManager"
             interface="org.opendaylight.sfc.statistics.SfcStatisticsManagerInterface"
             odl:type="default"/>

    <bean id="sfcStatisticsConfigListener"
          class="org.opendaylight.sfc.statistics.listeners.SfcStatisticsConfigurationListener">
        <argument ref="dataBroker"/>
        <argument ref="sfcStatisticsManager"/>
    </bean>

</blueprint>
